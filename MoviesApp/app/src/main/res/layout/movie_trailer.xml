<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/trailer_icon"
        android:background="@drawable/play"
        android:layout_width="@dimen/trailer_icon_width"
        android:layout_height="@dimen/trailer_icon_height"
        android:layout_margin="@dimen/movie_details_def_margin"/>

    <TextView
        android:id="@+id/trailer_name"
        android:text="rapapa tonight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/trailer_text_margin"
        android:layout_marginLeft="@dimen/movie_poster_text_interval"
        android:layout_marginStart="@dimen/movie_poster_text_interval"
        android:layout_toEndOf="@id/trailer_icon"
        android:layout_toRightOf="@id/trailer_icon"
        android:textColor="@android:color/black"
        android:textSize="@dimen/movie_details_text_size" />
</RelativeLayout>