<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="com.example.annadroid.moviesapp.MainActivity">


    <fragment
        android:id="@+id/movies_top_fragment"
        android:name="com.example.annadroid.moviesapp.MoviesTopFragment"
        android:layout_width="@dimen/grid_column_width"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/movie_details_container"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"/>

</LinearLayout>